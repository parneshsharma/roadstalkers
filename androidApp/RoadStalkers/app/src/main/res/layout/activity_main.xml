<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/id_maps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Locate On Map" />


        <Button
            android:id="@+id/id_startRecording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lets Stalk" />

        <Button
            android:id="@+id/id_stopRecording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Stalking" />

        <Button
            android:id="@+id/id_showVariance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ShowVariance" />

        <Button
            android:id="@+id/id_showRoadCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Road Quality" />

        <Button
            android:id="@+id/id_clearButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Acceleration 'z' with time" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/id_graphZ"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp" />

        <TextView
            android:layout_marginTop="10dp"
            android:text="Gyro-sensor data with time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/id_graphLy"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/data_switch"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
